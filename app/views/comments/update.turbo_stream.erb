<% if flash[:notice] %>
  <%= turbo_stream.replace dom_id(@comment) do %>
    <%= render partial: 'answers/comment', object: @comment %>
  <% end %>
  <%= turbo_stream.replace "comment_#{@comment.id}_flash" do %>
    <div id=<%="comment_#{@comment.id}_flash"%> class="mt-3">
      <div class="flex justify-end mr-13">
        <div role="alert" class="alert alert-info w-64 flex justify-center py-2">
          <%= "下記の#{notice}" %>
        </div>
      </div>
    </div>
  <% end %>
<% elsif flash[:alert] %>
  <%= turbo_stream.replace "comment_#{@comment.id}_flash" do %>
    <div id=<%="comment_#{@comment.id}_flash"%> class="my-3">
      <div class="flex justify-end mr-13">
        <div role="alert" class="alert alert-error flex justify-center py-2">
          <ul class="mb-0">
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
<% end %>