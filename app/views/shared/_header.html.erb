<header class="bg-white border-gray-100 sticky top-0 z-40">
  <div class="navbar pl-3 pr-3 items-center justify-between h-20 border-b-2 border-gray-100">
    <div class="flex items-center space-x-2">
      <%= link_to root_path, class: "flex"  do %>
      <%= image_tag  'Tatoe_v1-1.1.png', class: "w-13", alt: 'Tatoeロゴ' %>
      <div class="flex items-end">
        <span class="text-4xl font-bold text-[#A0D8EF]">Tatoe</span>
      </div>
      <% end %>
    </div>
    <!-- ドロップダウンメニュー -->
    <!-- ログイン済み -->
    <div class="dropdown dropdown-end">
      <label tabindex="0" role="button" class="btn swap swap-rotate w-14 h-12 rounded-xl" for="menu_toggle">
        <input type="checkbox" id="menu-toggle" />
        <svg class=" swap-off fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
          <path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z" />
        </svg>
      </label>
      <ul tabindex="0" class="dropdown-content menu bg-base-200 rounded-box z-1 w-[95vw] shadow-sm space-y-2">
        <% if user_signed_in? %>
        <%= link_to mypage_path, class: "btn btn-ghost border-none btn-xl" do %>
        <div class="flex items-center space-x-3">
          <div class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full">
            <%= current_user.decorate.avatar_display? %>
          </div>
          <p class="user-name text-2xl font-medium"><%= current_user.name %></p>
        </div>
        <% end %>
        <div class="border-b-4 border-gray-100"></div>
        <%= link_to "アプリの使い方", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "お問い合わせ", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "利用規約", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "プライバシーポリシー", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <div class="border-b-4 border-gray-100"></div>
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline btn-error border-none btn-lg" %>
        <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline btn-info border-none btn-lg" %>
        <div class="border-b-4 border-gray-100"></div>
        <%= link_to "アプリの使い方", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "お問い合わせ", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "利用規約", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <%= link_to "プライバシーポリシー", "#", class: "btn btn-outline btn-info border-none btn-lg" %>
        <% end %>
      </ul>
    </div>
  </div>
  <%# ここからハンバーガーメニュー
    <label class="btn btn-circle swap swap-rotate">
      <!-- this hidden checkbox controls the state -->
    <input type="checkbox" />

    <!-- hamburger icon -->
    <svg class="swap-off fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
      <path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z" />
    </svg>
    <!-- close icon -->
    <svg class="swap-on fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512">
      <polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49" />
    </svg>
    </label>
    <%# ここまでハンバーガーメニュー%>

  <%#  <button class="text-gray-600">
       <svg class="w-6 h-6" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
       </button>
%>


</header>