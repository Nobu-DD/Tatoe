<footer>
  <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-100 px-4 py-2 z-40">
    <div class="flex justify-around">
      <%= link_to topics_path, class: "flex-col h-auto py-2 px-3 #{controller_name == 'topics' && action_name == 'index' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 6h13M8 12h13M8 18h13M3 6h.01M3 12h.01M3 18h.01" />
      </svg>
      <span class="text-xs">お題検索</span>
      <% end %>
      <% if user_signed_in? %>
      <%= link_to new_topic_path, class: "flex-col h-auto py-2 px-3 #{controller_name == 'topics' && action_name == 'new' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
      </svg>
      <span class="text-xs">お題投稿</span>
      <% end %>
      <% else %>
      <%= link_to new_topic_path, data: { turbo_method: :get, turbo_confirm: "ログインが必要です。ログインページに遷移します。"}, class: "flex-col h-auto py-2 px-3 #{controller_name == 'topics' && action_name == 'new' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
      </svg>
      <span class="text-xs">お題投稿</span>
      <% end %>
      <% end %>

      <%= link_to '#', class: "flex-col h-auto py-2 px-3 #{controller_name == 'rankings' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center pointer-events-none opacity-25" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 3v18h18" />
      </svg>
      <span class="text-xs">ランキング</span>
      <% end %>
      <% if user_signed_in? %>
      <%= link_to mypage_path, class: "flex-col h-auto py-2 px-3 #{controller_name == 'mypages' && action_name == 'show' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <span class="text-xs">マイページ</span>
      <% end %>
      <% else %>
      <%= link_to mypage_path, data: { turbo_method: :get, turbo_confirm: "ログインが必要です。ログインページに遷移します。"}, class: "flex-col h-auto py-2 px-3 #{controller_name == 'mypages' && action_name == 'show' ? 'bg-[#A0D8EF] text-white' : 'text-gray-600'} rounded-xl flex items-center" do %>
      <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <span class="text-xs">マイページ</span>
      <% end %>
      <% end %>
    </div>
  </nav>
</footer>