<%= turbo_frame_tag dom_id(topic) do %>
<div id="<%="topic_#{topic.id}_flash"%>"></div>
<div class="bg-white px-2 py-2 border-b border-gray-100">
  <div class="mb-4">
    <div class="flex justify-between mb-3">
      <div class="flex flex-wrap space-x-1 space-y-1">
        <% if topic.genres.present? %>
        <% topic.genres.each do |genre|%>
        <span class="bg-[#E0F2FE] text-[#0369A1] text-xs px-2 py-1 rounded-full mr-1"><%= genre.name %></span>
        <% end %>
        <% else %>
        <p class="text-[#0369A1]">ジャンル未設定</p>
        <% end %>
      </div>
      <div class="flex items-center space-x-2">
        <% if user_signed_in? %>
        <% if current_user.likes.exists?(likeable_type: "Topic", likeable_id: topic.id) %>
        <%= render "likes/unlike", object: topic, type: "Topic" %>
        <% else %>
        <%= render "likes/like", object: topic, type: "Topic" %>
        <% end %>
        <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="gray" class="size-[1.5em]">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
        <% end %>
        <span id=<%="Topic_#{topic.id}_size"%> class="text-lg text-[#999999]"><%=topic.likes.size%></span>
      </div>
    </div>

    <h2 class="text-xl font-bold text-gray-800 mb-3 leading-relaxed"><%= topic.title %></h2>

    <% if topic.description.present? %>
    <p class="text-gray-600 text-sm leading-relaxed"><%= simple_format(topic.description) %></p>
    <% end %>

    <div class="mt-3 mb-4">
      <div class="flex justify-between items-center text-sm text-gray-600">
        <div class="flex items-center space-x-2">
          <div class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full">
            <%= topic.user.decorate.avatar_display? %>
          </div>
          <p class="user-name text-lg"><%= topic.user.name %></p>
        </div>
        <span><%= l topic.published_at %></span>
      </div>
    </div>
    <!-- Hints -->
    <% if topic.hints.any? %>
    <div class="mb-4">
      <div class="flex items-center mb-2">
        <svg class="w-4 h-4 text-yellow-600 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-sm font-medium text-yellow-700">ヒント</span>
      </div>
      <div class="flex flex-wrap gap-2">
        <% topic.hints.each do |hint| %>
        <% if hint.body.present? %>
        <span class="bg-yellow-50 px-3 py-1 rounded-full text-xs text-yellow-700 border border-yellow-200"><%= hint.body %></span>
        <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
    <!-- 編集、削除ボタン -->
    <% if current_user && current_user.own?(topic) %>
    <div class="flex justify-between mb-2 space-x-3">
      <%= render "edit-delete_button", topic: topic %>
    </div>
    <% end %>
    <!-- シェア機能 -->
    <div class="flex justify-end">
      <%= link_to OgpCreatorService.x_share_encode(topic), target: :_blank, rel: :noopener, class: "btn bg-black text-white border-black rounded-xl" do %>
      <svg aria-label=" X logo" width="16" height="12" viewBox="0 0 300 271" xmlns="http://www.w3.org/2000/svg">
        <path fill="currentColor" d="m236 0h46l-101 115 118 156h-92.6l-72.5-94.8-83 94.8h-46l107-123-113-148h94.9l65.5 86.6zm-16.1 244h25.5l-165-218h-27.4z" />
      </svg>
      シェア！
      <% end %>
    </div>
  </div>
</div>
<% end %>