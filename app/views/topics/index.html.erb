<% content_for(:title, "お題検索") %>
<div class="pt-5 pb-15 px-2">
  <div class="bg-white shadow-lg rounded-2xl w-full py-8 px-2">
    <div class="text-center mb-5">
      <h2 class=" text-2xl font-bold text-gray-800">お題検索</h2>
    </div>
    <!-- 検索フォーム -->
    <%= render "search", q: @q %>
    <!-- 結果一覧 -->
    <div class="space-y-3">
      <div class="flex justify-center">
        <%= render "shared/paginate", collection: @topics %>
      </div>
      <div class="flex justify-between items-center mx-3">
        <h3 class="text-lg font-bold text-gray-800">検索結果</h3>
        <span id="topics_size" class="text-[#999999]"><%="#{@topics.total_count}件"%></span>
      </div>
      <%= render partial: "topic", collection: @topics %>
      <div class="flex justify-center">
        <%= render "shared/paginate", collection: @topics %>
      </div>
    </div>
  </div>
</div>