<div class="bg-white rounded-xl shadow-sm transition">
  <div class="hover:shadow-md transition shadow-2xs rounded-t-lg p-3">
    <%= link_to topic do %>
    <div class="flex justify-between items-center mb-2">
      <div class="flex flex-wrap space-x-1 space-y-1">
        <% if topic.genres.present? %>
        <% topic.genres.each do |genre| %>
        <span class="text-xs px-2 py-1 rounded-full bg-[#E0F2FE] text-[#0369A1]"><%= genre.name %></span>
        <% end %>
        <% else %>
        <p class="text-[#0369A1]">ジャンル未設定</p>
        <% end %>
      </div>
      <span class="text-xs text-gray-500 published-at"><%= l topic.published_at %></span>
    </div>
    <div>
      <h2 class="text-base font-medium text-gray-800 mb-2 topic-title"><%= topic.title %></h2>
    </div>
    <div class="flex justify-end mr-3">
      <span class="text-[#8ecaf2] text-xl font-medium">詳細</span>
    </div>
    <% end %>
  </div>
  <div class="flex justify-between text-xs text-gray-500 px-4 py-2">
    <div class="flex items-center space-x-2">
      <div class="relative">
        <div class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full">
          <%= topic.user.decorate.avatar_display? %>
        </div>
      </div>
      <p class="user-name text-lg"><%= topic.user.name %></p>
    </div>
    <div class="flex items-center space-x-1">
      <% if current_user && current_user.own?(topic) %>
      <div class="flex justify-between space-x-1">
        <%= render "topics/edit-delete_button", topic: topic %>
      </div>
      <% else %>
      <% if user_signed_in? %>
      <%= button_to "#", class: "btn btn-circle" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="size-[1.2em]">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
      </svg>
      <% end %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>