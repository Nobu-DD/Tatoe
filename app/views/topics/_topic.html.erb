<div class="topic-item">
  <div class=" space-y-4 mb-3">
    <%= link_to topic do %> <div class="bg-white p-4 rounded-xl shadow-sm hover:shadow-md transition">
      <div class="flex justify-between items-center mb-2">
        <div>
          <% topic.genres.each do |genre| %>
          <span class="text-xs px-2 py-1 rounded-full bg-[#E0F2FE] text-[#0369A1]"><%= genre.name %></span>
          <% end %>
        </div>
        <span class="text-xs text-gray-500 published-at"><%= l topic.published_at %></span>
      </div>
      <h2 class="text-base font-medium text-gray-800 mb-2 topic-title"><%= topic.title %></h2>
      <div class="flex justify-between text-xs text-gray-500">
        <div class="flex items-center space-x-2">
          <div class="relative">
            <div class="relative flex h-10 w-10 shrink-0 overflow-hidden rounded-full">
              <% if topic.user.avatar.present? %>
              <%= image_tag topic.user.avatar.url, alt: "プロフィール画像", class: "aspect-square h-full w-full" %>
              <% else %>
              <span class="flex h-full w-full items-center justify-center rounded-full bg-[#E0F2FE] text-[#0369A1] text-2xl"><%= topic.user[:name][0] %></span>
              <% end %>
            </div>
          </div>
          <p class="user-name text-lg"><%= topic.user.name %></p>
        </div>
        <div class="flex items-center space-x-1">
          <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          <span>いいね(未実装)</span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>