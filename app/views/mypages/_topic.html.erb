<div class="topic-item">
  <div class="space-y-4 mb-3">
    <%= link_to topic do %>
    <div class="bg-white p-4 rounded-xl shadow-sm hover:shadow-md transition space-y-2">
      <div class="flex justify-between items-center">
        <div class="flex flex-wrap space-x-1 space-y-1">
          <% if topic.genres.present? %>
          <% topic.genres.each do |genre| %>
          <span class="text-xs px-2 py-1 rounded-full bg-[#E0F2FE] text-[#0369A1]"><%= genre.name %></span>
          <% end %>
          <% else %>
          <p class="text-[#0369A1]">ジャンル未設定</p>
          <% end %>
        </div>
        <span class=" text-xs text-gray-500 published-at"><%= l topic.published_at %></span>
      </div>
      <h2 class="mt-3 mb-3 text-sm font-medium text-gray-800 topic-title"><%= topic.title %></h2>
      <div class="flex justify-between text-xs text-gray-500 space-x-1">
        <% if topic.hints.all? { |hint| hint.body.present? } %>
        <div class="flex flex-wrap gap-2">
          <% topic.hints.each do |hint| %>
          <% if hint.body.present? %>
          <span class="bg-yellow-50 px-3 py-1 rounded-full text-xs text-yellow-700 border border-yellow-200"><%= hint.body %></span>
          <% end %>
          <% end %>
        </div>
        <% else %>
        <p class="text-yellow-700">ヒント未設定</p>
        <% end %>
      </div>
      <div class="flex justify-between mt-2">
        <div class="flex items-center space-x-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="gray" class="size-[1.2em]">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
          </svg>
          <span class="text-gray-400 text-lg"><%= "#{topic.likes.size}" %></span>
        </div>
        <div class="flex justify-between space-x-2">
          <%= render "topics/edit-delete_button", topic: topic %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>