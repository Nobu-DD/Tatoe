<div class="px-4 py-10">
  <div class="bg-white shadow-lg rounded-2xl w-full p-8 space-y-6">
    <div class="text-center mb-5">
      <h2 class=" text-2xl font-bold text-gray-800">新規登録</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-5">
      <%= f.label :name, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "例え太郎"%>
    </div>

    <div class="field mb-5">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <%= f.email_field :email, autocomplete: "email", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "tatoe@example.com"%>
    </div>

    <div class="field mb-5">
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "#{@minimum_password_length} characters minimum" %>
    </div>

    <div class="field mb-5">
      <%= f.label :password_confirmation, "確認用パスワード", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "もう一度パスワードを入力" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn w-full bg-[#A0D8EF] hover:bg-[#7CC7E8] text-white font-semibold rounded-xl" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>