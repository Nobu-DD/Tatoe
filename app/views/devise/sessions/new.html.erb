<% content_for(:title, "ログイン") %>
<div class="pt-5 pb-15 px-2">
  <div class="bg-white shadow-lg rounded-2xl w-full py-8 px-4 space-y-2">
    <div class="text-center mb-10">
      <h2 class="text-2xl font-bold text-gray-800">ログイン</h2>
    </div>
    <div class="flex justify-end">
      <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn bg-white text-black border-[#e5e5e5] rounded-xl", data: { turbo: false } do %>
      <svg aria-label="Google logo" width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <g>
          <path d="m0 0H512V512H0" fill="#fff"></path>
          <path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path>
          <path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path>
          <path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path>
          <path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path>
        </g>
      </svg>
      Google認証はこちら
      <% end %>
    </div>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), data: {turbo: false} do |f| %>
    <div class="field mb-5">
      <%= f.label :email ,"メールアドレス", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "tatoe@example.com"%>
    </div>

    <div class="field mb-5">
      <%= f.label :password ,"パスワード", class: "block text-sm font-medium text-gray-700 mb-3 " %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-info text-base w-full rounded-xl border-gray-200", placeholder: "password" %>
    </div>

    <div class="flex justify-end mb-5">
      <%= link_to "パスワードを忘れられた方はこちら",new_user_password_path, class: "text-sm text-[#0369A1] hover:underline" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn w-full bg-[#A0D8EF] hover:bg-[#7CC7E8] text-white font-semibold rounded-xl" %>
    </div>
    <% end %>
  </div>
</div>